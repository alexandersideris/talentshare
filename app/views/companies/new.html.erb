<div style="text-align: center; font-size: 20px; padding-top: 60px; background-color: white;">
	<h1 style="margin:30px;">New Company</h1>


	<%= form_for @company do |c| %>

		</br>
		<p style="color: green;">The name of your startup.</p>

		<%= c.label :name %></br>
		<%= c.text_field :name, :required => true%>
		<br></br><br></br>

		<p style="color: green;">Describe your startup in one sentence.</p>

		<%= c.label :description %></br>
		<%= c.text_area :description, :required => true%>
		<br></br><br></br>


		<p style="color: green;">Your startup's website. It must start with http:// or https://</p>

		<%= c.label :url %></br>
		<%= c.text_field :url, :required => true%>
		<br></br><br></br>

		<p style="color: green;">Your company's location.</p>

		<%= c.label :location %></br>
		<%= c.text_field :location, :required => true%>
		<br></br><br></br>

		<p style="color: green;">Your startup's logo.</p>

		<%= c.label :image %></br>
		<%= c.file_field :image %>
		<br></br><br></br>

		<hr>
		<p style="font-size: 25px;">The company's credentials.</p>
		<hr>
		<br>
		<p style="color: green;">The company's email for login.</p>

		<%= c.label :email %></br>
		<%= c.text_field :email, :required => true%>
		<br></br><br></br>

		<p style="color: green;">The company's password for login.</p>

		<%= c.label :password %></br>
		<%= c.text_field :password, :required => true%>
		<br></br><br></br>

		<p style="color: green;">The company's password for login.</p>

		<%= c.label :password_confirmation %></br>
		<%= c.text_field :password_confirmation, :required => true%>
		<br></br><br></br>

		<%= c.submit %>

		<br><br>
		
	<% end %>
</div>
