<!DOCTYPE html>
<html style="scroll-behavior: smooth;">
<head>
  <title>TalentShare</title>
  <link rel="shortcut icon" href="https://i.imgur.com/mUX4h8g.png">

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  '//maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag  '//maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto+Mono|Roboto:400,500,700" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


  <style>
    a:hover {
     cursor:pointer;
    }
  </style>

</head>
<body style="font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans !important; background-image: linear-gradient(to bottom, #ffffff 8%, #476987 100%);">
<nav class="navbar navbar-default navbar-static-top " style="background-color: white;">
  <div class="container">
    <ul class="nav navbar-nav">
      <li class="" style="margin-top:5px;">
        <a style="font-size: 35px; color:black; text-decoration: none;" href="/"><img src="https://i.imgur.com/pFcOt9E.png" style="height:35px;"/><p style="color:grey; font-size: 10px; text-decoration: none;">A closed platform where startups share their best applicants</p></a>
      </li>
      
    </ul>
    <ul class="navbar-nav ml-auto">

      <li class="nav-item">
        <a style="font-size: 35px; color:black;" href="/#about"><p style=" color:grey; font-size: 13px; padding-right: 30px;">About</p></a>
      </li>
    </ul>

    <ul class="nav navbar-nav">
      <% if !company_signed_in? %>
        <li class="nav-item">
          <a style="font-size: 35px; color:black;" href="/sign_in/"><p style="color:grey; font-size: 13px; text-decoration: none;">Sign In</p></a>
        </li>
      <% else %>
          <a style="font-size: 35px; color:black;" href="/companies/profile/"><p style="color:grey; font-size: 13px; text-decoration: none;">My Profile</p></a>
      <% end %>
      
    </ul>
    
  </ul>
    </div>
  </div>
</nav>



<%= yield %>

<script>

  document.getElementById("sort_by_company").onclick = sortByCompany;
  document.getElementById("sort_by_date").onclick = sortByDate;

  function signInPopup() {
    alert("You need to sign in to gain access to the lists.");
    return false
  }

  function sortByCompany() {
    
    document.getElementById("sort_by_company").style.color="grey";
    document.getElementById("sort_by_date").style.color="#191919";

    document.getElementById("the_list_of_openings").style.display="none";
    document.getElementById("the_list_of_companies").style.display="inline";

    return false
  }

  function sortByDate() {

    document.getElementById("sort_by_date").style.color="grey";
    document.getElementById("sort_by_company").style.color="#191919";

    document.getElementById("the_list_of_companies").style.display="none";
    document.getElementById("the_list_of_openings").style.display="inline";

    return false
  }

  function hey() {

    if(document.getElementById("why_not_free_text").style.display=="none"){
      document.getElementById("why_not_free_text").style.display="block";
    }else{
      document.getElementById("why_not_free_text").style.display="none";
    }

    return false
  }

</script>

</body>
</html>
