<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
<div style="text-align: center; font-size: 20px; padding-top: 50px; background-color: white;">

	<h1 style="margin:30px;">Edit List</h1>
			<p style="color:grey; font-size: 13px;">Please make sure you ask the applicants before adding them to your list. TalentShare will double check with some of the applicants.</p>


	<%= form_for @list do |l| %>

		</br>
		<p style="color: green;">The job position's title (eg. Junior Full Stack Developer)</p>

		<%= l.label :position %></br>
		<%= l.text_field :position, :required => true%>
		<br></br><br></br>

		<p style="color: green;">The position's location (eg. 'London, UK' or 'Remote')</p>

		<%= l.label :location %></br>
		<%= l.text_field :location, :required => true%>
		<br></br><br></br>

		<p style="color: green;">When did this position close? (eg. '2/18' [mm/yy])</p>

		<%= l.label :date %></br>
		<%= l.text_field :date, :required => true%>
		<br></br><br></br>

		<p style="color: green;">Current file.</p>

		<a target="_blank" href="<%= @list.file.url %>">Link to file.</a>
		<br></br><br>


		<p style="color: green;">Change file</p>

		<%= l.label :file %></br>
		<%= l.file_field :file%>
		<br></br><br>
		

		<%= l.submit %>

		<br><br><br><br><br><br><br>

		<%= link_to "Delete List", @list, :method => :delete, :style => 'font-size: 11px; color:red;' %>
		
	<% end %>
</div>
